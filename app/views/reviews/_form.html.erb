<%= form_for @review do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :genre %>
  <%= f.select(:genre, options_for_select(["hip-hop/rap", "rock", "classical", "electronic", "alternative", "indie", "pop"])) %>
  <%= f.label :content %>
  <%= f.text_area :content, rows: '10' %>
  <%= f.submit %>
<% end %>
